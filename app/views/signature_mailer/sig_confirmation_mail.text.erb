<%= t("mail.dear") %> <%= @signature.person_name %>,

<%= t("mail.confirm.signature.linkinstruction",
  petition: @petition.name,
  email: @signature.person_email,
  date: l(@signature.signed_at.to_date),
  name: @signature.person_name,
  confirm_url: @confirm_url
) %>

<%= t("mail.confirm.signoff") %>

<%= t("mail.confirm.signature.petition",
  petition_url: petition_share_url(@signature.petition),
  intro: @petition.description,
  we: @petition.initiators,
  observe: @petition.statement,
  request: @petition.request
) %>

<%= t("mail.confirm.signature.ask_petitioner",
  petitionermail: @petition.petitioner_email) if @petition.petitioner_email %>
