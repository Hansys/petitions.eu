<%= t("mail.dear") %> <%= t("mail.request.dear") %> <%= @petition.office.name %>,

<%= t("mail.request.announcement",{
	petition: @petition.name,
	date: l(@petition.date_projected, format: :long),
	petitioner: @petition.petitioner_name,
	signatures_count: @petition.get_count,
	subdomain: @petition.subdomain
}) %>

<%= t("mail.request.signoff", {
	petitioner: @petition.petitioner_name,
	office_email: @petition.office.email
}) %>


<%= t("mail.moderation.petition", {
	subdomain: @petition.subdomain,
	we: @petition.initiators,
	observe: @petition.statement,
	request: @petition.request
}) %>
