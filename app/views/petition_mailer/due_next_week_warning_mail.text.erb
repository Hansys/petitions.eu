<%= t("mail.dear") %> <%= @petition.petitioner_name %>,

<%= t("mail.petition.due_next_week") %>

<% if @petition.get_count > 10 %>
  <%= t("mail.petition.due_next_week_write",{
	  petition: @petition.name,
	  date: l(@petition.date_projected, format: :long),
	  petitioner: @petition.petitioner_name,
	  signatures_count: @petition.get_count,
	  subdomain: @petition.subdomain
}) %>

* <%= t("survey.request_is_met") %>
* <%= t("survey.too_late") %>
* <%= t("survey.situation") %>
* <%= t("survey.no_majority") %>
* <%= t("survey.different") %>
* <%= t("survey.personal") %>
* <%= t("survey.other_answers") %>

<% end %>

<%= t("mail.signoff", petitioner_email: @petition.petitioner_email) %>
