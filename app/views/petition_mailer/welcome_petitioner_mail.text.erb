<%= t("mail.dear") %> <%= @petition.petitioner_name %>,

<%= t("mail.petition.confirm.instructions",
  petition: @petition.name,
  petitioner: @petition.petitioner_name,
  email: @petition.petitioner_email,
  password: @password,
  confirmation_url: confirmation_url(@user, confirmation_token: @user.confirmation_token)
) %>

<% if @petition.office -%>
<%= t("mail.petition.confirm.contact_office", email: @petition.office.email) -%>
<%= t("mail.petition.confirm.contact_office_phone", phone: @petition.office.telephone) if @petition.office.telephone -%>.
<% end %>

<%= t("mail.signoff", petitioner_email: @petition.petitioner_email) %>
