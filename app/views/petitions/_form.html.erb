
<%= form_for(@petition, html: {class: 'form-horizontal', autocomplete: 'on'}) do |f| %>

  <% if @petition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@petition.errors.count, "error") %> prohibited this petition from being saved:</h2>

      <ul>

      <% @petition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>

      </ul>
    </div>

  <% end %>

  <div class="form-group">
    <%= f.label :name, class:'col-sm-2 control-label' %>

    <div class="col-sm-10">
    <%= f.text_field :name, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class:'col-sm-2 control-label'  %>

    <div class="col-sm-10">
    <%= f.text_area :description, class: 'form-control', rows:"6" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "request", class:'col-sm-2 control-label'  %>

    <div class="col-sm-10">
    <%= f.text_area "request", class: 'form-control', rows:"6" %>
    </div>
  </div>

  <h1><%= t 'petitioner' %></h1>

  <div class="form-group">
    <%= f.label :petitioner_name, class:'col-sm-2 control-label' %>

    <div class="col-sm-10">
    <%= f.text_field :petitioner_name, class:'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :petitioner_email, class:'col-sm-2 control-label' %>

    <div class="col-sm-10">
    <%= f.email_field :petitioner_email, class:'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>

<% end %>
